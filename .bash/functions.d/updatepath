function updatepath(){

  NEWPATH=$1;
  log "trying to add $NEWPATH to PATH"
  if [[ -d $NEWPATH ]] #check if path exists
  then 
    case ":$PATH:" in
    *":$NEWPATH:"*) :
      log "$NEWPATH is a duplicate"
      ;;
    *) 
      log "$NEWPATH not present, adding to PATH"
      PATH=$NEWPATH:$PATH
      ;;
    esac
  else
    log "$NEWPATH doesnt exist"
  fi

}
