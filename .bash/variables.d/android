#!/bin/bash
. ~/.bash/functions.d/path

export ANDROID_SDK=$OPT/android/sdk
export ANDROID_NDK=$OPT/android-ndk-r7b

export ANDROID_SEARCH_API=19
export ANDROID_HOME=$ANDROID_SDK # used in vim-android

#Adjust path
updatepath $ANDROID_SDK/platform-tools
updatepath $ANDROID_SDK/tools
updatepath $ANDROID_NDK
updatepath $BB_SDK/bin
